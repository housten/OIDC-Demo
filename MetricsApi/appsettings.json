{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "%AZURE_TENANT_ID%",  
    "ClientId": "%AZURE_APP_ID%",  
    "Audience": "api://%AZURE_APP_ID%",
    "Scopes": {
      "Read": "api://%AZURE_APP_ID%/Metrics.Retrieve",
      "Write": "api://%AZURE_APP_ID%/Metrics.Submit",
      "Clear": "api://%AZURE_APP_ID%/Metrics.Clear"
    },
    "AppPermissions": {
      "Manage": "Metrics.Manage"
    }
  },
  "Swagger": {
    "ClientId": "%SWAGGER_CLIENT_ID%",  
    "Scope": "api://%AZURE_APP_ID%/Metrics.Retrieve api://%AZURE_APP_ID%/Metrics.Submit api://%AZURE_APP_ID%/Metrics.Clear",
    "ScopeDescription": "Access Metrics API"
  },
  "AllowedHosts": "*"
}
